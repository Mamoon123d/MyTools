<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BlurLayout">
        <attr name="blur_downscaleFactor" format="float" />
        <attr name="blur_blurRadius" format="integer" />
        <attr name="blur_fps" format="integer" />
        <attr name="blur_cornerRadius" format="dimension" />
        <attr name="blur_alpha" format="float" />
    </declare-styleable>

    <declare-styleable name="TriangleShape">
        <attr name="triangleType">
            <enum name="centerTop" value="0" />
            <enum name="leftBottom" value="1" />
            <enum name="rightBottom" value="2" />
            <enum name="centerBottom" value="3" />
            <enum name="leftTop" value="4" />
        </attr>
        <attr name="triangleColor" format="color" />
        <attr name="TriangleCorner" format="float" />
    </declare-styleable>


    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension" />
        <attr name="realtimeDownsampleFactor" format="float" />
        <attr name="realtimeOverlayColor" format="color" />
    </declare-styleable>

    <declare-styleable name="BlurShadowImageView">
        <attr name="v_imageRound" format="dimension" />
        <attr name="v_imageSrc" format="reference" />
        <attr name="v_shadowOffset" format="dimension" />
    </declare-styleable>
</resources>